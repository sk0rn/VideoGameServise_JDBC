<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>GameVideoService</display-name>

    <servlet>
        <servlet-name>games</servlet-name>
        <servlet-class>controller.GameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>games</servlet-name>
        <url-pattern>/games</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>games_list</servlet-name>
        <servlet-class>controller.GameListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>games_list</servlet-name>
        <url-pattern>/games_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>genres</servlet-name>
        <servlet-class>controller.GenreServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>genres</servlet-name>
        <url-pattern>/genres</url-pattern>
    </servlet-mapping>
</web-app>